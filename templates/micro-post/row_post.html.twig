<div class="media text-muted pt-3">
    <img data-src="holder.js/32x32?text=MBlog&bg=e83e8c&fg=fff&size=7" alt="" class="mr-2 rounded">
    <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <span class="d-block">
            <a href="{{ path('micro_post_user', {'username': post.user.username}) }}"><strong class="text-gray-dark">{{ post.user.username }}</strong></a>
            {% if post.createdAt == post.updatedAt %}
                <small>Created: {{ post.createdAt|ago }}</small>
            {% else %}
                <small>Updated: {{ post.updatedAt|ago }}</small>
            {% endif %}
        </span>
        <a href="{{ path('micro_post_post', {'id':post.id}) }}">{{ post.microPost }}</a>
    </p>
</div>
